 static void Main()
 {
     int iter = 0;
     int sum = 0;

     while ( iter < 101)
     {
         //  Console.WriteLine($"count = {iter}");
         sum += iter;
         iter++;     ** 증감 표시 하는 것이 중요!
     }    
     Console.WriteLine(sum);
     
     

 }
