피보나치 수열


class Fibonacci
{

    static void Main()
    {

        Console.Write("원하는 토끼쌍 수를 입력하세요 : ");
        int num = Convert.ToInt32(Console.ReadLine());
        int first = 0, second = 1;
        int gen = 0; // 세대수
        Console.WriteLine($"{second}, \t 0");

        while (second <= num)
        {


            gen++;
            int temp = first + second;
                first = second;
                second = temp;

                Console.WriteLine($"{temp}, \t {gen}");
            
        
          
        }
      






        
        
       
    }
}

    
=====================================================



class DoWhile
{
    static void Main()
    {

        int count = 0;

        do
        {
            Console.WriteLine($"안녕하세요, {count}");
            count++;
        } while(count < 3);



    }




}




=== 동일한것
while ( count < 3)
{
Console.WriteLine($"안녕하세요, {count}");
count++;

}
