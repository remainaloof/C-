class DoWhile
{
    static void Main()
    {
        int s = 0, i = 0;

        do
        {
            ++i;
            s += i;
        } while (i < 10);

        Console.WriteLine($"1부터 {i} 까지의 합은 {+s}");
    }




1부터 10 까지의 합은 55
=======================================



int j = 1;

do
{
// j 값 의 판별 여부와 무관하게 무조건 한 번 반복문을 실행
Console.WriteLine( j  + " : Hello, World!"); // 1회 출력됨
j ++;
}
while ( j <= 10); // 반복문 1회 실행 후 마지막에 조건식 판별
                  // => 조건식 찬별 결과가 false 이면 do ~ while 문을 빠져나감

                  Console.WriteLine("반복문 종료 후 j값 : " + j);
                  // j값이 1증가 해쓰므로 11출력됨
